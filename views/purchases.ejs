<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");
      body {
        font-family: "Inter", system-ui, sans-serif;
      }

      #toast {
        transform: translateX(120%);
        transition: transform 0.3s ease;
      }
      #toast.show {
        transform: translateX(0);
      }

      /* Purchases Filter Section - Custom CSS */
      .purchases-filters-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      @media (min-width: 640px) {
        .purchases-filters-container {
          flex-direction: row;
          align-items: center;
          justify-content: space-between;
        }
      }

      .purchases-search-wrapper {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        width: 100%;
      }

      @media (min-width: 640px) {
        .purchases-search-wrapper {
          width: auto;
        }
      }

      .purchases-search-container {
        position: relative;
        flex: 1;
        min-width: 0;
      }

      @media (min-width: 640px) {
        .purchases-search-container {
          flex: 0 0 auto;
          width: 256px;
        }
      }

      @media (min-width: 1024px) {
        .purchases-search-container {
          width: 300px;
        }
      }

      .purchases-search-input {
        width: 100%;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(51, 65, 85, 0.5);
        border-radius: 0.75rem;
        padding: 0.625rem 1rem 0.625rem 2.5rem;
        font-size: 0.875rem;
        color: white;
        outline: none;
      }

      .purchases-search-input::placeholder {
        color: rgb(100, 116, 139);
      }

      .purchases-search-input:focus {
        border-color: rgba(99, 102, 241, 0.5);
      }

      .purchases-search-icon {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        width: 1rem;
        height: 1rem;
        color: rgb(100, 116, 139);
        pointer-events: none;
      }

      .purchases-filters-wrapper {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        width: 100%;
      }

      @media (min-width: 640px) {
        .purchases-filters-wrapper {
          flex-direction: row;
          width: auto;
        }
      }

      .purchases-filter-select {
        width: 100%;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(51, 65, 85, 0.5);
        border-radius: 0.75rem;
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
        color: white;
        outline: none;
      }

      @media (min-width: 640px) {
        .purchases-filter-select {
          width: auto;
          min-width: 140px;
        }
      }

      .purchases-filter-select:focus {
        border-color: rgba(99, 102, 241, 0.5);
      }

      /* Pagination Mobile Fixes */
      .purchases-pagination {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
      }

      @media (min-width: 640px) {
        .purchases-pagination {
          flex-direction: row;
          justify-content: space-between;
        }
      }

      .purchases-pagination-info {
        font-size: 0.875rem;
        color: rgb(148, 163, 184);
        text-align: center;
      }

      @media (min-width: 640px) {
        .purchases-pagination-info {
          text-align: left;
        }
      }

      .purchases-pagination-controls {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .purchases-pagination-btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        color: rgb(148, 163, 184);
        background: rgba(30, 41, 59, 0.5);
        border: none;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: background-color 0.2s;
        white-space: nowrap;
      }

      .purchases-pagination-btn:hover:not(:disabled) {
        background: rgb(30, 41, 59);
      }

      .purchases-pagination-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .purchases-page-info {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        color: white;
        background: rgba(99, 102, 241, 0.2);
        border-radius: 0.5rem;
      }

      /* Table Mobile Improvements */
      .purchases-table-container {
        background: rgba(15, 23, 42, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 1rem;
        overflow: hidden;
      }

      .purchases-table-wrapper {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }

      .purchases-table {
        width: 100%;
        min-width: 640px;
      }

      @media (max-width: 639px) {
        .purchases-table th,
        .purchases-table td {
          padding: 0.75rem 0.5rem;
          font-size: 0.75rem;
        }
      }

      /* Page Heading - Smaller Font */
      .purchases-page-header header h1 {
        font-size: 0.9375rem !important;
        font-weight: 600;
      }

      @media (min-width: 640px) {
        .purchases-page-header header h1 {
          font-size: 1rem !important;
        }
      }

      /* Validity Column Styling */
      .purchases-validity-cell {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
      }

      .purchases-validity-main {
        font-size: 0.875rem;
        color: white;
        font-weight: 500;
        line-height: 1.5;
        white-space: nowrap;
      }

      .purchases-validity-expires {
        font-size: 0.75rem;
        color: rgb(148, 163, 184);
        line-height: 1.5;
        white-space: nowrap;
      }

      .purchases-validity-expires-label {
        color: rgb(100, 116, 139);
        font-size: 0.75rem;
      }
    </style>
  </head>
  <body class="min-h-screen bg-slate-950">
    <%- include('partials/sidebar') %>

    <!-- Toast Notification -->
    <div id="toast" class="fixed top-6 right-6 z-[100] max-w-sm">
      <div
        id="toast-content"
        class="rounded-2xl p-4 shadow-2xl flex items-start gap-3 border border-white/10 backdrop-blur-xl"
      >
        <div id="toast-icon" class="shrink-0 w-6 h-6"></div>
        <div class="flex-1 min-w-0">
          <p id="toast-title" class="font-semibold text-sm"></p>
          <p id="toast-message" class="text-sm opacity-80 mt-0.5"></p>
        </div>
        <button
          onclick="hideToast()"
          class="shrink-0 text-white/60 hover:text-white transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="lg:pl-64">
      <div class="purchases-page-header">
        <%- include('partials/dashboardHeader', { pageTitle: 'Membership Purchases', pageSubtitle: 'View all subscription purchases' }) %>
      </div>

      <!-- Page Content -->
      <main class="p-4 lg:p-6">
        <!-- Header Actions -->
        <div class="purchases-filters-container">
          <div class="purchases-search-wrapper">
            <!-- Search -->
            <div class="purchases-search-container">
              <input
                type="text"
                id="searchInput"
                placeholder="Search by profile name, username..."
                class="purchases-search-input"
                onkeyup="handleSearch(event)"
              />
              <svg
                class="purchases-search-icon"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
            </div>
          </div>
          <div class="purchases-filters-wrapper">
            <!-- Filter by payment status -->
            <select
              id="paymentFilter"
              onchange="loadPurchases()"
              class="purchases-filter-select"
            >
              <option value="">All Payments</option>
              <option value="true">Paid</option>
              <option value="false">Unpaid</option>
            </select>
            <!-- Filter by membership status -->
            <select
              id="membershipFilter"
              onchange="loadPurchases()"
              class="purchases-filter-select"
            >
              <option value="">All Status</option>
              <option value="true">Active</option>
              <option value="false">Expired</option>
            </select>
          </div>
        </div>

        <!-- Purchases Table -->
        <div class="purchases-table-container">
          <div class="purchases-table-wrapper">
            <table class="purchases-table">
              <thead>
                <tr class="border-b border-white/5">
                  <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-5 py-4">
                    User
                  </th>
                  <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-5 py-4">
                    Plan
                  </th>
                  <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-5 py-4">
                    Pricing
                  </th>
                  <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-5 py-4">
                    Payment
                  </th>
                  <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-5 py-4">
                    Validity
                  </th>
                  <th class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider px-5 py-4">
                    Status
                  </th>
                </tr>
              </thead>
              <tbody id="purchasesTableBody" class="divide-y divide-white/5">
                <!-- Loading state -->
                <tr id="loadingRow">
                  <td colspan="6" class="px-5 py-8 text-center">
                    <div class="flex items-center justify-center gap-3">
                      <div
                        class="w-5 h-5 border-2 border-indigo-500/30 border-t-indigo-500 rounded-full animate-spin"
                      ></div>
                      <span class="text-slate-400">Loading purchases...</span>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div id="pagination" class="purchases-pagination">
            <p id="paginationInfo" class="purchases-pagination-info">
              Showing 0 of 0 purchases
            </p>
            <div class="purchases-pagination-controls">
              <button
                id="prevBtn"
                onclick="changePage(-1)"
                disabled
                class="purchases-pagination-btn"
              >
                Previous
              </button>
              <span id="pageInfo" class="purchases-page-info">1</span>
              <button
                id="nextBtn"
                onclick="changePage(1)"
                disabled
                class="purchases-pagination-btn"
              >
                Next
              </button>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="/js/config.js"></script>
    <script src="/js/purchases.js"></script>
    <script>
      function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("sidebarOverlay");
        sidebar.classList.toggle("-translate-x-full");
        overlay.classList.toggle("hidden");
      }
      function toggleProfileMenu() {
        const menu = document.getElementById("profileMenu");
        menu.classList.toggle("hidden");
      }
      document.addEventListener("click", function (e) {
        const menu = document.getElementById("profileMenu");
        const button = e.target.closest('[onclick="toggleProfileMenu()"]');
        if (!button && !menu.contains(e.target)) {
          menu.classList.add("hidden");
        }
      });
    </script>
  </body>
</html>

