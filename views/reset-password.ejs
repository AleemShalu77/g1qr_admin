<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body
    class="min-h-screen bg-slate-950 flex items-center justify-center p-4 overflow-y-auto"
  >
    <!-- Mesh Gradient Background -->
    <div class="fixed inset-0 -z-10">
      <div
        class="absolute inset-0 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),transparent)]"
      ></div>
      <div
        class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-indigo-500/50 to-transparent"
      ></div>
    </div>

    <!-- Grid Pattern Overlay -->
    <div
      class="fixed inset-0 -z-10 bg-[linear-gradient(rgba(255,255,255,.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,.02)_1px,transparent_1px)] bg-[size:72px_72px]"
    ></div>

    <!-- Animated Orbs -->
    <div
      class="fixed top-1/4 -left-32 w-96 h-96 bg-purple-500/20 rounded-full blur-[128px] animate-pulse"
    ></div>
    <div
      class="fixed bottom-1/4 -right-32 w-96 h-96 bg-indigo-500/20 rounded-full blur-[128px] animate-pulse"
      style="animation-delay: 1s"
    ></div>

    <!-- Toast Notification -->
    <div
      id="toast"
      class="fixed top-6 right-6 z-50 max-w-sm transition-transform duration-300 ease-out"
      style="transform: translateX(120%)"
    >
      <div
        id="toast-content"
        class="rounded-2xl p-4 shadow-2xl flex items-start gap-3 border border-white/10 backdrop-blur-xl"
      >
        <div id="toast-icon" class="shrink-0 w-6 h-6"></div>
        <div class="flex-1 min-w-0">
          <p id="toast-title" class="font-semibold text-sm"></p>
          <p id="toast-message" class="text-sm opacity-80 mt-0.5"></p>
        </div>
        <button
          onclick="hideToast()"
          class="shrink-0 text-white/60 hover:text-white transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Reset Password Card -->
    <div class="w-full max-w-[420px] animate-fade-in">
      <!-- Card Container -->
      <div class="relative">
        <!-- Glow Effect -->
        <div
          class="absolute -inset-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-indigo-500 rounded-[28px] opacity-20 blur-xl"
        ></div>

        <!-- Card -->
        <div
          class="relative bg-slate-900/80 backdrop-blur-xl rounded-3xl border border-white/10 p-6 md:p-8 shadow-2xl"
        >
          <!-- Logo & Header -->
          <div class="text-center mb-6">
            <div
              class="relative inline-flex items-center justify-center w-16 h-16 mb-4"
            >
              <!-- Rotating Border -->
              <div
                class="absolute inset-0 rounded-2xl bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 animate-spin-slow opacity-80"
              ></div>
              <div
                class="absolute inset-[3px] rounded-[13px] bg-slate-900"
              ></div>
              <!-- Icon -->
              <div class="relative z-10 w-8 h-8 text-white">
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"
                  />
                </svg>
              </div>
            </div>
            <h1 class="text-2xl font-bold text-white mb-1 tracking-tight">
              Reset Password
            </h1>
            <p class="text-slate-400 text-sm">
              Enter your new password below
            </p>
          </div>

          <!-- Reset Password Form -->
          <form id="resetPasswordForm" class="space-y-4" novalidate>
            <!-- Hidden token field -->
            <input type="hidden" id="resetToken" value="<%= token %>" />

            <!-- New Password Field -->
            <div class="space-y-1.5">
              <label
                for="password"
                class="block text-sm font-medium text-slate-300"
                >New Password</label
              >
              <div class="relative group">
                <div
                  class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-500 group-focus-within:text-indigo-400 transition-colors"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z"
                    />
                  </svg>
                </div>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl pl-11 pr-12 py-3 text-white placeholder-slate-500 text-sm transition-all duration-200 focus:outline-none focus:border-indigo-500/50 focus:ring-2 focus:ring-indigo-500/20 focus:bg-slate-800/80 hover:border-slate-600/50"
                  placeholder="Enter new password"
                  required
                  autocomplete="new-password"
                />
                <button
                  type="button"
                  id="togglePassword"
                  class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-500 hover:text-slate-300 transition-colors"
                >
                  <svg
                    id="eyeIcon"
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                  <svg
                    id="eyeOffIcon"
                    class="w-5 h-5 hidden"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88"
                    />
                  </svg>
                </button>
              </div>
              <p
                id="password-error"
                class="text-red-400 text-xs hidden flex items-center gap-1"
              >
                <svg
                  class="w-3.5 h-3.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span></span>
              </p>
            </div>

            <!-- Confirm Password Field -->
            <div class="space-y-1.5">
              <label
                for="confirmPassword"
                class="block text-sm font-medium text-slate-300"
                >Confirm Password</label
              >
              <div class="relative group">
                <div
                  class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-500 group-focus-within:text-indigo-400 transition-colors"
                >
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"
                    />
                  </svg>
                </div>
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl pl-11 pr-12 py-3 text-white placeholder-slate-500 text-sm transition-all duration-200 focus:outline-none focus:border-indigo-500/50 focus:ring-2 focus:ring-indigo-500/20 focus:bg-slate-800/80 hover:border-slate-600/50"
                  placeholder="Confirm new password"
                  required
                  autocomplete="new-password"
                />
                <button
                  type="button"
                  id="toggleConfirmPassword"
                  class="absolute inset-y-0 right-0 pr-4 flex items-center text-slate-500 hover:text-slate-300 transition-colors"
                >
                  <svg
                    id="eyeIconConfirm"
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                  <svg
                    id="eyeOffIconConfirm"
                    class="w-5 h-5 hidden"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88"
                    />
                  </svg>
                </button>
              </div>
              <p
                id="confirmPassword-error"
                class="text-red-400 text-xs hidden flex items-center gap-1"
              >
                <svg
                  class="w-3.5 h-3.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span></span>
              </p>
            </div>

            <!-- Password Requirements -->
            <div class="text-xs text-slate-500 space-y-1 pt-1">
              <p class="font-medium text-slate-400">Password must contain:</p>
              <ul class="space-y-0.5 pl-4">
                <li id="req-length" class="flex items-center gap-2">
                  <span class="w-1 h-1 rounded-full bg-slate-600"></span>
                  At least 8 characters
                </li>
              </ul>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              id="submitBtn"
              class="relative w-full mt-4 group"
            >
              <div
                class="absolute -inset-0.5 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl blur opacity-60 group-hover:opacity-100 transition duration-300"
              ></div>
              <div
                class="relative flex items-center justify-center gap-2 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl py-3 px-4 text-white font-semibold text-sm transition-all duration-200 group-hover:shadow-lg group-hover:shadow-indigo-500/25 group-active:scale-[0.98]"
              >
                <span id="btnText">Reset Password</span>
                <svg
                  id="btnArrow"
                  class="w-4 h-4 transition-transform group-hover:translate-x-1"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"
                  />
                </svg>
                <div
                  id="btnSpinner"
                  class="hidden w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin"
                ></div>
              </div>
            </button>
          </form>

          <!-- Success State (hidden by default) -->
          <div id="successState" class="hidden text-center py-4">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-emerald-500/20 mb-4">
              <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-white mb-2">Password Reset Successfully!</h3>
            <p class="text-slate-400 text-sm mb-4">
              Your password has been changed.<br/>
              You can now login with your new password.
            </p>
            <a
              href="/login"
              class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl py-3 px-6 text-white font-semibold text-sm transition-all duration-200 hover:shadow-lg hover:shadow-indigo-500/25"
            >
              Go to Login
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
          </div>

          <!-- Divider -->
          <div class="relative my-5">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-slate-700/50"></div>
            </div>
            <div class="relative flex justify-center text-xs uppercase">
              <span class="bg-slate-900 px-4 text-slate-500 tracking-wider"
                >Secure Access</span
              >
            </div>
          </div>

          <!-- Security Badge -->
          <div
            class="flex items-center justify-center gap-3 text-xs text-slate-500"
          >
            <div class="flex items-center gap-1.5">
              <svg
                class="w-4 h-4 text-emerald-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span>256-bit SSL</span>
            </div>
            <span class="text-slate-700">•</span>
            <div class="flex items-center gap-1.5">
              <svg
                class="w-4 h-4 text-indigo-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z"
                  clip-rule="evenodd"
                />
              </svg>
              <span>2FA Ready</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <p class="text-center text-slate-600 text-xs mt-4">
        © 2024 G1QR Admin. All rights reserved.
      </p>
    </div>

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

      body {
        font-family: "Inter", system-ui, sans-serif;
      }

      @keyframes fade-in {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .animate-fade-in {
        animation: fade-in 0.6s ease-out;
      }

      @keyframes spin-slow {
        from {
          transform: rotate(0deg);
        }
        to {
          transform: rotate(360deg);
        }
      }

      .animate-spin-slow {
        animation: spin-slow 8s linear infinite;
      }

      #toast.show {
        transform: translateX(0) !important;
      }

      /* Input error state */
      input.error {
        border-color: rgb(239 68 68 / 0.5) !important;
        background-color: rgb(239 68 68 / 0.05) !important;
      }

      /* Requirement met state */
      .req-met {
        color: rgb(52 211 153) !important;
      }
      .req-met span {
        background-color: rgb(52 211 153) !important;
      }

      /* Subtle scrollbar styling */
      body::-webkit-scrollbar {
        width: 6px;
      }
      body::-webkit-scrollbar-track {
        background: transparent;
      }
      body::-webkit-scrollbar-thumb {
        background: rgba(99, 102, 241, 0.3);
        border-radius: 3px;
      }
      body::-webkit-scrollbar-thumb:hover {
        background: rgba(99, 102, 241, 0.5);
      }
    </style>

    <script src="/js/config.js"></script>
    <script src="/js/reset-password.js"></script>
  </body>
</html>



