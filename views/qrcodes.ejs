<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");
      body {
        font-family: "Inter", system-ui, sans-serif;
      }

      #toast {
        transform: translateX(120%);
        transition: transform 0.3s ease;
      }
      #toast.show {
        transform: translateX(0);
      }

      .modal {
        display: none;
      }
      .modal.active {
        display: flex;
      }

      /* QR Codes Filter Section - Custom CSS */
      .qr-filters-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .qr-filters-row {
        display: flex;
        flex-direction: column;
        align-items: stretch;
        gap: 0.75rem;
      }

      @media (min-width: 640px) {
        .qr-filters-row {
          flex-direction: row;
          align-items: center;
        }
      }

      .qr-batch-filter {
        width: 100%;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(51, 65, 85, 0.5);
        border-radius: 0.75rem;
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
        color: white;
        outline: none;
        flex-shrink: 0;
      }

      @media (min-width: 640px) {
        .qr-batch-filter {
          width: 130px;
        }
      }

      .qr-batch-filter:focus {
        border-color: rgba(99, 102, 241, 0.5);
      }

      .qr-search-container {
        position: relative;
        flex: 1;
        min-width: 0;
      }

      @media (min-width: 640px) {
        .qr-search-container {
          min-width: 400px;
        }
      }

      @media (min-width: 1024px) {
        .qr-search-container {
          min-width: 500px;
        }
      }

      .qr-search-input {
        width: 100%;
        background: rgba(30, 41, 59, 0.5);
        border: 1px solid rgba(51, 65, 85, 0.5);
        border-radius: 0.75rem;
        padding: 0.625rem 1rem 0.625rem 2.5rem;
        font-size: 0.875rem;
        color: white;
        outline: none;
      }

      .qr-search-input::placeholder {
        color: rgb(100, 116, 139);
      }

      .qr-search-input:focus {
        border-color: rgba(99, 102, 241, 0.5);
      }

      .qr-search-icon {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        width: 1rem;
        height: 1rem;
        color: rgb(100, 116, 139);
        pointer-events: none;
      }

      .qr-export-btn {
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: white;
        background: rgb(16, 185, 129);
        border: none;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: background-color 0.2s;
        white-space: nowrap;
        flex-shrink: 0;
      }

      @media (min-width: 640px) {
        .qr-export-btn {
          padding: 0.625rem 1rem;
        }
      }

      .qr-export-btn:hover:not(:disabled) {
        background: rgb(5, 150, 105);
      }

      .qr-export-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .qr-export-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
      }

      .qr-export-text-full {
        display: none;
      }

      @media (min-width: 640px) {
        .qr-export-text-full {
          display: inline;
        }
      }

      .qr-export-text-short {
        display: inline;
      }

      @media (min-width: 640px) {
        .qr-export-text-short {
          display: none;
        }
      }

      .qr-generate-btn {
        padding: 0.625rem 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: white;
        background: rgb(99, 102, 241);
        border: none;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        cursor: pointer;
        transition: background-color 0.2s;
        width: 100%;
        flex-shrink: 0;
      }

      @media (min-width: 640px) {
        .qr-generate-btn {
          width: auto;
        }
      }

      .qr-generate-btn:hover {
        background: rgb(79, 70, 229);
      }

      .qr-generate-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
      }
    </style>
  </head>
  <body class="min-h-screen bg-slate-950">
    <%- include('partials/sidebar') %>

    <!-- Toast Notification -->
    <div id="toast" class="fixed top-6 right-6 z-[100] max-w-sm">
      <div
        id="toast-content"
        class="rounded-2xl p-4 shadow-2xl flex items-start gap-3 border border-white/10 backdrop-blur-xl"
      >
        <div id="toast-icon" class="shrink-0 w-6 h-6"></div>
        <div class="flex-1 min-w-0">
          <p id="toast-title" class="font-semibold text-sm"></p>
          <p id="toast-message" class="text-sm opacity-80 mt-0.5"></p>
        </div>
        <button
          onclick="hideToast()"
          class="shrink-0 text-white/60 hover:text-white transition-colors"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Main Content -->
    <div class="lg:pl-64">
      <%- include('partials/dashboardHeader', { pageTitle: 'QR Codes', pageSubtitle: 'Manage QR codes and batches' }) %>

      <!-- Page Content -->
      <main class="p-4 lg:p-6">
        <!-- Header Actions -->
        <div class="qr-filters-container">
          <!-- Filters Row -->
          <div class="qr-filters-row">
            <!-- Batch Filter -->
            <select
              id="batchFilter"
              onchange="handleBatchChange()"
              class="qr-batch-filter"
            >
              <option value="">All Batches</option>
            </select>
            <!-- Search by QR Code ID -->
            <div class="qr-search-container">
              <input
                type="text"
                id="searchInput"
                placeholder="Search by QR Code ID..."
                class="qr-search-input"
                onkeyup="handleSearch(event)"
              />
              <svg
                class="qr-search-icon"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
            </div>
            <!-- Export Button -->
            <button
              id="exportBtn"
              onclick="handleExport()"
              disabled
              class="qr-export-btn"
            >
              <svg class="qr-export-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
              </svg>
              <span class="qr-export-text-full">Export QR Codes</span>
              <span class="qr-export-text-short">Export</span>
            </button>
          </div>
          <!-- Generate QR Codes Button -->
          <button
            onclick="openGenerateModal()"
            class="qr-generate-btn"
          >
            <svg class="qr-generate-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Generate QR Codes
          </button>
        </div>

        <!-- QR Codes List -->
        <div id="qrcodesContainer" class="space-y-4">
          <!-- Loading state -->
          <div id="loadingState" class="text-center py-12">
            <div class="flex items-center justify-center gap-3">
              <div
                class="w-5 h-5 border-2 border-indigo-500/30 border-t-indigo-500 rounded-full animate-spin"
              ></div>
              <span class="text-slate-400">Loading QR codes...</span>
            </div>
          </div>
        </div>

        <!-- Pagination -->
        <div
          id="pagination"
          class="flex flex-col sm:flex-row items-center justify-between gap-3 mt-6 px-4 py-4 bg-slate-900/50 border border-white/5 rounded-2xl"
        >
          <p id="paginationInfo" class="text-sm text-slate-400 text-center sm:text-left">
            Showing 0 of 0 QR codes
          </p>
          <div class="flex items-center gap-2">
            <button
              id="prevBtn"
              onclick="changePage(-1)"
              disabled
              class="px-3 py-1.5 text-sm text-slate-400 bg-slate-800/50 rounded-lg hover:bg-slate-800 disabled:opacity-50 disabled:cursor-not-allowed transition-colors whitespace-nowrap"
            >
              Previous
            </button>
            <span
              id="pageInfo"
              class="px-3 py-1.5 text-sm text-white bg-indigo-500/20 rounded-lg"
              >1</span
            >
            <button
              id="nextBtn"
              onclick="changePage(1)"
              disabled
              class="px-3 py-1.5 text-sm text-slate-400 bg-slate-800/50 rounded-lg hover:bg-slate-800 disabled:opacity-50 disabled:cursor-not-allowed transition-colors whitespace-nowrap"
            >
              Next
            </button>
          </div>
        </div>
      </main>
    </div>

    <!-- Generate QR Codes Modal -->
    <div id="generateModal" class="modal fixed inset-0 z-50 items-center justify-center p-4 bg-black/60 backdrop-blur-sm">
      <div class="bg-slate-900 border border-white/10 rounded-2xl shadow-2xl w-full max-w-md">
        <!-- Modal Header -->
        <div class="flex items-center justify-between p-6 border-b border-white/5">
          <h2 class="text-white font-bold text-xl">Generate QR Codes</h2>
          <button
            onclick="closeGenerateModal()"
            class="p-2 text-slate-400 hover:text-white hover:bg-white/5 rounded-lg transition-colors"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Modal Body -->
        <form id="generateForm" onsubmit="handleGenerate(event)" class="p-6 space-y-4">
          <!-- Batch Code -->
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Batch Code</label>
            <input
              type="text"
              id="generateBatchCode"
              required
              class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl px-4 py-2.5 text-sm text-white placeholder-slate-500 focus:outline-none focus:border-indigo-500/50"
              placeholder="e.g., CA0001"
            />
          </div>

          <!-- Size -->
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Quantity</label>
            <input
              type="number"
              id="generateSize"
              required
              min="1"
              max="1000"
              class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl px-4 py-2.5 text-sm text-white placeholder-slate-500 focus:outline-none focus:border-indigo-500/50"
              placeholder="Number of QR codes to generate"
            />
          </div>

          <!-- Item Type -->
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Item Type</label>
            <select
              id="generateItemType"
              required
              class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl px-4 py-2.5 text-sm text-white focus:outline-none focus:border-indigo-500/50"
            >
              <option value="membership">Membership</option>
              <option value="product">Product</option>
              <option value="service">Service</option>
            </select>
          </div>

          <!-- Notes -->
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Notes (Optional)</label>
            <textarea
              id="generateNotes"
              rows="3"
              class="w-full bg-slate-800/50 border border-slate-700/50 rounded-xl px-4 py-2.5 text-sm text-white placeholder-slate-500 focus:outline-none focus:border-indigo-500/50 resize-none"
              placeholder="Additional notes about this batch..."
            ></textarea>
          </div>

          <!-- Actions -->
          <div class="flex items-center gap-3 pt-4">
            <button
              type="button"
              onclick="closeGenerateModal()"
              class="flex-1 px-4 py-2.5 text-sm font-medium text-slate-300 bg-slate-800/50 hover:bg-slate-800 rounded-xl transition-colors"
            >
              Cancel
            </button>
            <button
              type="submit"
              class="flex-1 px-4 py-2.5 text-sm font-medium text-white bg-indigo-500 hover:bg-indigo-600 rounded-xl transition-colors"
            >
              Generate
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="/js/config.js"></script>
    <script src="/js/qrcodes.js"></script>
    <script>
      function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        const overlay = document.getElementById("sidebarOverlay");
        sidebar.classList.toggle("-translate-x-full");
        overlay.classList.toggle("hidden");
      }
      function toggleProfileMenu() {
        const menu = document.getElementById("profileMenu");
        menu.classList.toggle("hidden");
      }
      document.addEventListener("click", function (e) {
        const menu = document.getElementById("profileMenu");
        const button = e.target.closest('[onclick="toggleProfileMenu()"]');
        if (!button && !menu.contains(e.target)) {
          menu.classList.add("hidden");
        }
      });
    </script>
  </body>
</html>

