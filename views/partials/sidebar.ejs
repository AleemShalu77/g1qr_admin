<!-- Sidebar -->
<aside
  id="sidebar"
  class="fixed inset-y-0 left-0 z-50 w-64 bg-slate-900/95 backdrop-blur-xl border-r border-white/5 transform transition-transform duration-300 lg:translate-x-0 -translate-x-full"
>
  <!-- Logo -->
  <div class="flex items-center gap-3 px-6 h-16 border-b border-white/5">
    <div class="w-9 h-9 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
      </svg>
    </div>
    <div>
      <h1 class="text-white font-bold text-lg">G1QR</h1>
      <p class="text-slate-500 text-xs">Admin Panel</p>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="p-4 space-y-1">
    <!-- Dashboard -->
    <a
      href="/dashboard"
      class="nav-item flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'bg-indigo-500/20 text-indigo-400' : 'text-slate-400 hover:bg-white/5 hover:text-white' %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </svg>
      Dashboard
    </a>

    <!-- Section Label -->
    <p class="px-4 pt-4 pb-2 text-xs font-semibold text-slate-500 uppercase tracking-wider">Management</p>

    <!-- App Users -->
    <a
      href="/dashboard/users"
      class="nav-item flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 <%= typeof activePage !== 'undefined' && activePage === 'users' ? 'bg-indigo-500/20 text-indigo-400' : 'text-slate-400 hover:bg-white/5 hover:text-white' %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
      </svg>
      App Users
    </a>

    <!-- QR Codes -->
    <a
      href="/dashboard/qrcodes"
      class="nav-item flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 <%= typeof activePage !== 'undefined' && activePage === 'qrcodes' ? 'bg-indigo-500/20 text-indigo-400' : 'text-slate-400 hover:bg-white/5 hover:text-white' %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
      </svg>
      QR Codes
    </a>

    <!-- Section Label -->
    <p class="px-4 pt-4 pb-2 text-xs font-semibold text-slate-500 uppercase tracking-wider">Subscriptions</p>

    <!-- Membership Plans -->
    <a
      href="/dashboard/plans"
      class="nav-item flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 <%= typeof activePage !== 'undefined' && activePage === 'plans' ? 'bg-indigo-500/20 text-indigo-400' : 'text-slate-400 hover:bg-white/5 hover:text-white' %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
      </svg>
      Membership Plans
    </a>

    <!-- Membership Purchases -->
    <a
      href="/dashboard/purchases"
      class="nav-item flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 <%= typeof activePage !== 'undefined' && activePage === 'purchases' ? 'bg-indigo-500/20 text-indigo-400' : 'text-slate-400 hover:bg-white/5 hover:text-white' %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
      </svg>
      Purchases
    </a>

    <!-- Section Label -->
    <p class="px-4 pt-4 pb-2 text-xs font-semibold text-slate-500 uppercase tracking-wider">Marketing</p>

    <!-- Coupons -->
    <a
      href="/dashboard/coupons"
      class="nav-item flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 <%= typeof activePage !== 'undefined' && activePage === 'coupons' ? 'bg-indigo-500/20 text-indigo-400' : 'text-slate-400 hover:bg-white/5 hover:text-white' %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
      </svg>
      Coupons
    </a>

    <!-- Newsletter -->
    <a
      href="/dashboard/newsletter"
      class="nav-item flex items-center gap-3 px-4 py-2.5 rounded-xl text-sm font-medium transition-all duration-200 <%= typeof activePage !== 'undefined' && activePage === 'newsletter' ? 'bg-indigo-500/20 text-indigo-400' : 'text-slate-400 hover:bg-white/5 hover:text-white' %>"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
      </svg>
      Newsletter
    </a>
  </nav>

  <!-- User Section -->
  <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-white/5">
    <div class="flex items-center gap-3 px-2">
      <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-semibold">
        A
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-white truncate">Admin</p>
        <p class="text-xs text-slate-500 truncate">admin@g1qr.com</p>
      </div>
      <a
        href="/logout"
        class="p-2 text-slate-400 hover:text-red-400 hover:bg-red-500/10 rounded-lg transition-colors"
        title="Logout"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
        </svg>
      </a>
    </div>
  </div>
</aside>

<!-- Mobile Overlay -->
<div
  id="sidebarOverlay"
  class="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 lg:hidden hidden"
  onclick="toggleSidebar()"
></div>



